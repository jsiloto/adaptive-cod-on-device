<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textConfigs"
        android:layout_width="384dp"
        android:layout_height="66dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="177dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarExperiment"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textResults" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="78dp"
        android:layout_height="23dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarExperiment"
        app:layout_constraintEnd_toEndOf="@+id/progressBarExperiment"
        app:layout_constraintStart_toStartOf="@+id/progressBarExperiment" />

    <TextView
        android:id="@+id/textResults"
        android:layout_width="383dp"
        android:layout_height="188dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textConfigs" />

    <Button
        android:id="@+id/button"
        android:layout_width="169dp"
        android:layout_height="86dp"
        android:layout_marginTop="36dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/progressBarExperiment"
        app:layout_constraintStart_toStartOf="@+id/progressBarExperiment"
        app:layout_constraintTop_toBottomOf="@+id/progressBarExperiment" />

</androidx.constraintlayout.widget.ConstraintLayout>